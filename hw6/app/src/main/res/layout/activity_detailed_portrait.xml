<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedActivityPortrait"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/detailed_image_portrait"
        android:layout_width="203dp"
        android:layout_height="252dp"
        android:layout_gravity="center"

        android:layout_marginStart="83dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0.5"
        android:ellipsize="end"
        android:scaleType="fitCenter"
        android:src="@mipmap/sunset_photo" />

    <TextView
        android:id="@+id/detailed_text_portrait"
        tools:text="a looooong text about al that note and image and everything"
        android:layout_width="328dp"
        android:layout_height="187dp"
        android:layout_gravity="center"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="89dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0.5" />
</LinearLayout>